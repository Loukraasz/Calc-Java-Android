<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Conteiner_Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">0.5dp</item>
    </style>

    <style name="Operators_Button" parent="Conteiner_Button">
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@drawable/bt_operators</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="Numbers_Button" parent="Conteiner_Button">
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/bt_shape</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="roundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>

</style>
</resources>