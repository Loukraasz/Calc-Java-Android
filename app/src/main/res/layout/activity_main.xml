<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_Expression"
        android:layout_width="match_parent"
        android:layout_height="214dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_erase"
            android:text="C"
            android:layout_weight="3"
            style="@style/Operators_Button"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_divide"
            android:text="÷"
            style="@style/Operators_Button"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/number_seven"
            style="@style/Numbers_Button"
            android:layout_weight="1"
            android:text="7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_eight"
            android:text="8"
            android:layout_weight="1"
            style="@style/Numbers_Button"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_nine"
            android:text="9"
            android:layout_weight="1"
            style="@style/Numbers_Button"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_multiplicate"
            android:text='×'
            style="@style/Operators_Button"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_four"
            android:text="4"
            android:layout_weight="1"
            style="@style/Numbers_Button"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_five"
            android:text="5"
            android:layout_weight="1"
            style="@style/Numbers_Button"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_six"
            android:text="6"
            android:layout_weight="1"
            style="@style/Numbers_Button"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_plus"
            android:text="+"
            style="@style/Operators_Button"
            />





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_one"
            style="@style/Numbers_Button"
            android:layout_weight="1"
            android:background="@drawable/bt_clicked"
            android:text="1" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_two"
            android:text="2"
            android:layout_weight="1"
            style="@style/Numbers_Button"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_three"
            android:text="3"
            android:layout_weight="1"
            style="@style/Numbers_Button"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_minor"
            android:text="−"
            style="@style/Operators_Button"
            />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_point"
            android:text="."
            android:layout_weight="1"
            style="@style/Numbers_Button"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/number_zero"
            android:text="0"
            android:layout_weight="1"
            style="@style/Numbers_Button"
            />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/bt_back"
            style="@style/Numbers_Button"
            android:layout_height="92dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/white"
            android:contentDescription="delete"
            android:scaleType="fitStart"
            android:src="@drawable/baseline_backspace_24"
            android:text="" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_equal"
            android:text="="
            style="@style/Operators_Button"
            />




    </LinearLayout>


</LinearLayout>